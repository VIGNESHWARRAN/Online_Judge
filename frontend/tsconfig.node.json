{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,           // helps with null assignability errors
    "noUnusedLocals": false,             // to suppress unused variable errors
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,
  },
  "include": ["vite.config.ts"]
}
